<div class="form-group">
  <label for="title">Title</label>
  <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
</div>

<div class="form-group">
  <label for="description">Description</label>
  <textarea type="text" name="description" id="description" class="form-control" rows="4"><%= article.description %></textarea>
</div>

<div class="form-group">
  <label for="markdowm">Markdown</label>
  <textarea required type="text" name="markdown" id="markdowm" class="form-control"rows=10><%= article.markdown %></textarea>
</div>

